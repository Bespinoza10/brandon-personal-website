<div class="row">
  <div class="col s10 m10 l10 center-column">
    <%= form_for @project do |f| %>
      <% if @project.errors.any?%>
        <h2><%= pluralize(@projects.errors.count, "error") %> prevented this client from saving:</h2>
        <ul>
          <% @project.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <%end%>
        </ul>
      <%end%>
      <div class="row">
        <div class="input-field col s12 m6">
          <%= f.text_field :title, {class: 'validate'}%>
          <label>Project Title:</label>
        </div>

        <div class="input-field col s12 m4">
          <div class="file-field input-field">
            <div class="btn">
              <span>Image</span>
              <%= f.file_field :project_image, {class: 'validate'}%>
            </div>
            <div class="file-path-wrapper">
              <input class="file-path validate" type="text">
            </div>
          </div>
        </div>

        <div class="input-field col s12">
          <%= f.text_area :description, {class: 'validate materialize-textarea'}%>
          <label>Project Description</label>
        </div>

        <div class="input-field col s12 m6">
          <%= f.text_field :role, {class: 'validate'}%>
          <label>Project Roles:</label>
        </div>
        <div class="input-field col s12 m6">
          <%= f.text_field :languages, {class: 'validate'}%>
          <label>Project Languages:</label>
        </div>
        <div class="input-field col s12">
          <%= f.text_field :responsibilities, {class: 'validate'}%>
          <label>Project Responsibilities:</label>
        </div>
        <div class="input-field col s12 m6">
          <%= f.text_field :project_link, {class: 'validate'}%>
          <label>Project's Web Link:</label>
        </div>
        <div class="input-field col s12">
          <%= f.text_field :other_link, {class: 'validate'}%>
          <label>Project's other links:</label>
        </div>
      </div>
      <button class="btn waves-effect waves-light orange" type="submit" name="action">Save
        <i class="material-icons right">send</i>
      </button>
    <%end%>
  </div>
</div>