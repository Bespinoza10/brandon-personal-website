<div class="container">
  <%= image_tag @project.project_image.url(:large) %>
  <h3><%= @project.title %></h3>
  <p><%= @project.description %></p>
  <%= link_to "Edit", edit_project_path(@project), class: "btn" %>
  <%= link_to "Delete", project_path(@project), method: :delete, data: { confirm: "Are you sure you want to delete this project?"}, class: "btn btn-default delete" %>
  <%= link_to "All projects", root_path, class: "btn" %>
</div>